# SocioConnect Backend Environment Variables
# Copy this file to .env and update the values

# Application
APP_NAME=SocioConnect API
VERSION=1.0.0
DESCRIPTION=A modern social media platform API
DEBUG=True
ENVIRONMENT=development

# Database Configuration
# For Neon PostgreSQL, use the connection string from your Neon dashboard
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://username:password@your-neon-host:5432/socioconnect
DATABASE_URL_TEST=postgresql://username:password@your-neon-host:5432/socioconnect_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://localhost:3002

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.mp4,.mov

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for future use)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=SocioConnect
